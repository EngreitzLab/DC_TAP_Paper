# Run differential expression with sceptre's dev branch to get confidence intervals
rule sceptre_dev_differential_expression_w_confidence_intervals_klann:
  input:
    sceptre_diffex_input = "temp_{sample}_w_CIs/sceptre_diffex_input.rds"
  output:
    discovery_results = "temp_{sample}_w_CIs/results_run_discovery_analysis.rds",
    final_sceptre_object = "temp_{sample}_w_CIs/final_sceptre_object.rds"
  log: "temp_{sample}_w_CIs/logs/sceptre_dev_differential_expression_w_confidence_intervals.log"
  conda:
    "envs/sceptre_dev_for_CIs.yml"
  resources:
    mem = "32G",
    time = "12:00:00"
  script:
    "../temp_klann_w_CIs/sceptre_dev_differential_expression_w_confidence_intervals.R"
